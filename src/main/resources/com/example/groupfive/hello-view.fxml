<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ProgressBar?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.groupfive.AppController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="This is JavaFX Music Player"/>
    <Label fx:id="songLabel"/>

    <ProgressBar fx:id="progressBar" maxWidth="Infinity" progress="0.0"/>

    <HBox spacing="5.0">
        <Button text="Play" onAction="#playMusic"/>
        <Button text="Pause" onAction="#pauseMusic"/>
        <Button text="Reset" onAction="#resetMusic"/>
        <Button text="Next Song" onAction="#nextSong"/>
        <Button text="Previous Song" onAction="#previousSong"/>
        <Button text="Chose Folder" onAction="#chooseFolder"/>
    </HBox>

</VBox>
